{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "title": {
    "text": "Principal causes of deaths from 2000 to 2022",
    "subtitle": "Medically Certified Causes",
    "anchor": "middle",
    "fontSize": 20,
    "font": "Serif",
    "subtitleFont": "Serif",
    "subtitleFontSize": 17
  },
  "width": 720,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/YuEunice/Data_Visualisation_2/main/data/2000_2022_medically_causes.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Category === 'Medically'"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true
      },
      "selection": {
        "CauseHighlight": {
          "type": "multi",
          "fields": ["Cause"],
          "bind": "legend"
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",
          "timeUnit": "year",
          "axis": {
            "labelAngle": -45  , "labelFontSize": 13,   
            "titleFontSize": 15 , 
            "labelFont": "Serif", 
            "titleFont": "Serif" 
          }
        },
        "y": {
          "field": "Number of Cases",
          "type": "quantitative",
          "axis": {
            "title": "Number of Death Cases"
            , "labelFontSize": 13,   
            "titleFontSize": 15 , 
            "labelFont": "Serif", 
            "titleFont": "Serif"
          }
        },
        "color": {
          "field": "Cause",
          "type": "nominal",
          "title": "Cause of Death",
          "scale": {
            "domain": [
              "COVID-19 infection",
              "Cerebrovascular diseases", 
              "Chronic lower respiratory diseases", 
              "Ischaemic heart diseases", 
              "Malignant neoplasm of trachea, bronchus and lung",
              "Pneumonia",
              "Septicaemia",
              "Transport accidents"
            ],
            "range": [
              "#717EC3",
              "#A3B7E0",
              "#515751",
              "#71A8C3",
              "#D9B4E6",
              "#B49FCF",
              "#FFBF46",
              "#B49FCF"
            ]
          },
          "legend": {
            "title": "Cause of Death",
            "titleFont": "Serif",
            "titleFontSize": 15,
            "orient": "right",
            "labelLimit": 300,  
            "labelFontSize": 13, 
            "labelFont": "Serif",
            "labelOverlap": true, 
            "columns": 1
          }
        },
        "opacity": {
          "condition": {"selection": "CauseHighlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year", "timeUnit": "year"},
          {"field": "Cause", "type": "nominal", "title": "Cause of Death"},
          {"field": "Number of Cases", "type": "quantitative", "title": "Number of Death Cases"}
        ]
      }
    },
    {
      "mark": {"type": "rule", "strokeWidth": 1.5, "color": "#6b6a6a"},
      "encoding": {
        "x": {"value": 680},  
        "y": {"value": 120}, 
        "x2": {"value": 610}, 
        "y2": {"value": 90}  
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":470},
        "y": {"value": 45},
        "text": {"value": "A                                 in"}
      }
    },

    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#black",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value":484},
        "y": {"value": 45},
        "text": {"value": "dramatic increase"}
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#717EC3",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value":610},
        "y": {"value": 45},
        "text": {"value": "COVID-19"}
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#717EC3",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value":470},
        "y": {"value": 60},
        "text": {"value": "infection"}
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":527},
        "y": {"value": 60},
        "text": {"value": "related deaths in 2020"}
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":470},
        "y": {"value": 75},
        "text": {"value": "due to the outbreak of COVID-19"}
      }
    }
    ,
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":470},
        "y": {"value": 90},
        "text": {"value": "in late December 2019"}
      }
    }
  ]
}
