{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "transparent",
    "title": {
      "text": "Principal causes of deaths from 2000 to 2022",
      "subtitle": "Non-Medically Certified Causes",
      "anchor": "middle",
      "fontSize": 20,
      "font": "Serif" ,
      "subtitleFont": "Serif",
      "subtitleFontSize": 17
    },
    "width": 750,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/YuEunice/Data_Visualisation_2/main/data/2000_2022_medically_causes.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter": "datum.Category === 'Non-Medically'"
      }
    ],
    "layer": [
      {
      "mark": {
        "type": "line",
        "point": true
      },
      "selection": {
        "CauseHighlight": {
          "type": "multi",
          "fields": ["Cause"],
          "bind": "legend"
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",
          "timeUnit": "year" ,
          "axis": {
            "labelAngle": -45  ,
            "labelFontSize": 13,   
            "titleFontSize": 15 , 
            "labelFont": "Serif", 
            "titleFont": "Serif"
          }
        },
        "y": {
          "field": "Number of Cases",
          "type": "quantitative",
          "axis": {
            "title": "Number of Death Cases"
            , "labelFontSize": 13,   
            "titleFontSize": 15 , 
            "labelFont": "Serif", 
            "titleFont": "Serif"
          }
    
          
        },
        "color": {
          "field": "Cause",
          "type": "nominal",
          "title": "Cause of Death",
          "scale": {
            "domain": [
              "Asthma",
              "Cerebrovascular diseases",
              "Diabetes mellitus",
              "Fever",
              "Hypertension",
              "Ischaemic heart diseases",
              "Old age 65 years and over",
              "Transport accidents-air,land and water"
            ],
        "range": [
              "#656565",
              "#A3B7E0",
              "#8AE9C1",
              "#662E9B",
              "#F1BB87",
              "#71A8C3",
              "#023618",
              "#F78E69"
          ]
          },
          "legend": {
                "title": "Cause of Death",
                "titleFont": "Serif",
                "titleFontSize": 15,
                "orient": "right",
                "labelLimit": 280,  
                "labelFontSize": 13, 
                "labelFont": "Serif",
                "labelOverlap": true, 
                "columns": 1 
              }
        },
        "opacity": {
          "condition": {"selection": "CauseHighlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year","timeUnit": "year" },
          {"field": "Cause", "type": "nominal", "title": "Cause of Death"},
          {"field": "Number of Cases", "type": "quantitative", "title": "Number of Death Cases"}
        ]
      }
    },
    {
      "mark": {"type": "rule", "strokeWidth": 1.5, "color": "#6b6a6a"},
      "encoding": {
        "x": {"value": 290},  
        "y": {"value": 60}, 
        "x2": {"value": 370}, 
        "y2": {"value": 100}  
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#023618",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value":330},
        "y": {"value": 120},
        "text": {"value": "Old Age 65 years and over"}
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":330},
        "y": {"value": 135},
        "text": {"value": " has consistently been the"}
      }
    },
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "black",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value":330},
        "y": {"value": 150},
        "text": {"value": "leading cause of death"}
      }
    }
    ,
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":466},
        "y": {"value":150},
        "text": {"value": "in"}
      }
    }
    ,
    { 
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "font": "Serif",
        "fontSize": 14,
        "color": "#4d4c4c"
      },
      "encoding": {
        "x": {"value":330},
        "y": {"value":165},
        "text": {"value": "Malaysia from 2000 to 2022"}
      }
    }
  ]
}
